# Database Configuration
DB_HOST=127.0.0.1
DB_NAME=ekklessia_db
DB_USER=root
DB_PASS=
DB_PORT=3306
DB_CHARSET=utf8mb4

# Application Environment
APP_ENV=local # local or production
APP_DEBUG=true
APP_URL=http://localhost/Ekklessia-church-management/Public
APP_NAME="Ekklessia Church Management"
APP_TIMEZONE=UTC
APP_LOCALE=en

# Security
SESSION_LIFETIME=120 # minutes
PASSWORD_RESET_TIMEOUT=60 # minutes
ENCRYPTION_KEY= # 32 character random string
COOKIE_SECURE=false # Set to true in production
COOKIE_HTTPONLY=true
COOKIE_SAMESITE=Lax

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="${APP_NAME}"

# File Upload
UPLOAD_MAX_SIZE=5242880 # 5MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# Gemini AI Configuration
GEMINI_ENABLED=false
GEMINI_API_KEY=
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1/models/gemini-pro:generateContent
GEMINI_LOG_USAGE=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_DIR=backups
BACKUP_FILENAME_PREFIX=backup_
BACKUP_RETENTION_DAYS=30

# Error Reporting
LOG_CHANNEL=file # file, database, or both
LOG_LEVEL=debug # debug, info, notice, warning, error, critical, alert, emergency
ERROR_EMAIL_NOTIFICATION=false
ERROR_EMAIL_TO=

# Cache Configuration
CACHE_DRIVER=file # file, redis, memcached
CACHE_PREFIX=ekklessia_
CACHE_LIFETIME=3600 # seconds

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_ATTEMPTS=60
RATE_LIMIT_DECAY_MINUTES=1
